<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".scenes.register.RegistrationPasswordFragment">

    <ScrollView
        android:layout_width="393dp"
        android:layout_height="434dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.622">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/MyProgressBarTwo"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:progressDrawable="@drawable/horizonatlprogress"
                android:progressTint="@color/float_green"
                android:theme="@style/MyProgressBarTwo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/shadow"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="@string/registration_password"
                android:minHeight="50dp"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:textAlignment="center"
                android:textColor="@color/darkGray"
                android:textColorHint="@color/khaky"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressBar" />

            <EditText
                android:id="@+id/confirmationEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/shadow"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="@string/registration_confirm_password"
                android:inputType="textPassword"
                android:minHeight="50dp"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:textAlignment="center"
                android:textColor="@color/darkGray"
                android:textColorHint="@color/khaky"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passwordEditText" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="64sp"
                android:layout_marginTop="24dp"
                android:text="@string/let_go_button"
                android:textAllCaps="false"
                android:gravity="center"
                android:textColor="@color/green"
                android:textSize="32sp"
                android:visibility="gone"
                android:fontFamily="@font/calibri_regular"
                android:paddingStart="50sp"
                android:paddingEnd="50sp"
                android:background="@drawable/shadow"
                app:layout_constraintEnd_toEndOf="@+id/passwordEditText"
                app:layout_constraintStart_toStartOf="@+id/passwordEditText"
                app:layout_constraintTop_toBottomOf="@+id/confirmationEditText" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>